@model IEnumerable<Category>

<div class="row">
	<div class="col-md-9 offset-md-2">
		<table class="table table-striped table-hover">
	<thead>
		<tr>
			<th>@Html.DisplayNameFor(x=>x.Name)</th>
			<th>@Html.DisplayNameFor(x=>x.Description)</th>
			<th>Action</th>
		</tr>
	</thead>
	<tbody>
				@foreach (var item in Model)
				{
				<tr>
					<td>@Html.DisplayNameFor(x=>item.Name)</td>
					<td>@Html.DisplayNameFor(x=>item.Description)</td>
					<td>
						<a class="btn btn-outline-info" href="#"><i class="fas fa-regular fa-pencil mr-2"></i>Edit</a>
							<a class="btn btn-outline-secondary" href="#"><i class="fas fa-regular fa-eye mr-2">Details</a>
							<a class="btn btn-outline-danger" href="#"><i class="fas fa-regular fa-trash mr-2">Delete</a>
					</td>
				</tr>
				}
	</tbody>
</table>
	</div>
</div>
