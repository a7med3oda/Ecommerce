@using Ecommerce.Data
@model Product

@{
    ViewData["Title"] = $"Edit Product - {@Model.Name}";
    var Category = new SelectList(ViewBag.Category, "Id", "Name");
}


<div class="row"> 
    <div class="col-md-6 offset-3">
        <p>
            <h2 class="text-center">Edit @Model.Name Product</h2>
        </p>
    </div>
    <div class="col-md-6 offset-3">
        <form asp-action="Edit">
           <div asp-validation-summary="ModelOnly" class="text-danger"></div>
           <div class="form-group">
               <label asp-for="Name" class="controle-lable"></label>
               <input asp-for="Name" class="form-control" autocomplete="off" />
               <span asp-validation-for="Name" class="text-danger"></span>
           </div>
            <div class="form-group">
               <label asp-for="Description" class="controle-lable"></label>
               <textarea asp-for="Description" class="form-control" rows=3></textarea>
               <span asp-validation-for="Description" class="text-danger"></span>
           </div>
            <div class="form-group">
               <label asp-for="Price" class="controle-lable"></label>
               <input asp-for="Price" class="form-control" autocomplete="off" />
               <span asp-validation-for="Price" class="text-danger"></span>
           </div>
            <div class="form-group">
               <label asp-for="ImageUrl" class="controle-lable"></label>
               <input asp-for="ImageUrl" class="form-control" autocomplete="off" />
               <span asp-validation-for="ImageUrl" class="text-danger"></span>
           </div>
            <div class="form-group">
               <label asp-for="productColor" class="controle-lable"></label>
               <select asp-for="productColor" class="form-control" asp-items="@Html.GetEnumSelectList<ProductColor>()"></select>
               <span asp-validation-for="productColor" class="text-danger"></span>
           </div>
            <div class="form-group">
                <label asp-for="Categories.Name" class="controle-lable"></label>
               <select asp-for="CategoryId" class="form-control" asp-items="@Category"></select>
               <span asp-validation-for="CategoryId" class="text-danger"></span>
           </div>
            <div class="col-md-4 offset-4 text-center">
                <img style="width:100%" src="@Model.ImageUrl" alt="@Model.Name" id="imagePreview"/>
            </div>
           <div class="form-group">
               <input type="submit" value="Update" class="btn btn-outline-info float-right" />
               <a asp-action="Index" class="btn btn-outline-secondary"> Show All Category</a>
           </div>
        </form>
    </div>
</div>


@section Scripts{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    } 
          <script>
            $("#ImageUrl").on("change",function(){
           var Result = document.getElementById("imagePreview");
           Result.src = $(this).val();
        })
        </script>
}