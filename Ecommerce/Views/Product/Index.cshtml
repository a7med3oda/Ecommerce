@model IEnumerable<Product>

@{
	ViewData["Title"] = "Listing Products";
}

<div class="row">
	@foreach (var item in Model)
	{
			<div class="col-md-3">
			<div class="card">
				<img src="@item.ImageUrl" alt="@item.Name" style="width:90%;height:300px">
				<h2>@item.Name</h2>
				<p>@item.Price.ToString("c")</p>
				<p>@item.Description</p>
				<p style="color:@item.ProductColor">@item.ProductColor</p>
				<p>@item.Categories.Name</p>
				<button>Add to Cart</button>
			</div>
		</div>
	}
</div>