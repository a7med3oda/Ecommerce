@model IEnumerable<ShoppingCartItem>
@{
    ViewData["Title"] = "Shopping cart summary";
}
<div class="row">
    <div class="col-md-8 offset-2">
        <h2>All Orders</h2>
        <hr />
        <table class="table table-hover">
            <thead>
                <tr>
                    <th>Amount</th>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Subtotal</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                            <tr>
                                <td class="align-middle">@item.Amount</td>
                                <td class="align-middle">@item.Product.Name</td>
                                <td class="align-middle">@item.Product.Price</td>
                                <td class="align-middle">@((item.Product.Price * item.Amount).ToString("c"))</td>
                                <td>
                                    <a class="text-danger" asp-controller="Orders" asp-action="RemoveFromCart"
                           asp-route-id="@item.Product.Id">
                                        <i class="fas fa-regular fa-minus"></i>
                                    </a>
                                    <a class="text-success" asp-controller="Orders" asp-action="AddToCart"
                           asp-route-id="@item.Product.Id">
                                        <i class="fas fa-regular fa-plus"></i>
                                    </a>
                                </td>
                            </tr>
                }
            </tbody>
            <tfoot>
                <tr>
                    <td class="collapse-2"></td>
                    <td><b>Total:</b></td>
                    <td>@(ViewBag.Total.ToString("c"))</td>
                    <td></td>
                </tr>
            </tfoot>
        </table>
        <div class="texxt-center">
            <div class="btn btn-group">
                <a class="btn btn-outline-info mr-3" asp-controller="Product" asp-action="Index"> <i class="fas fa-regular fa-refresh">Continue Shopping</i></a>
            </div>
            <div class="btn btn-group">
                <a class="btn btn-outline-success" asp-controller="Orders" asp-action="CompleteOrder"><i class="fas fa-regular fa-check">Complete order</i></a>
            </div>
        </div>
    </div>
</div>